{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["check", "doc"]
      }
    }
  },
  "namedInputs": {
    "dependencies": ["{projectRoot}/.pnp.*", "{projectRoot}/package.json"]
  },
  "targetDefaults": {
    "check": {
      "inputs": ["dependencies", "{projectRoot}/**/*", "{projectRoot}/**/.*"]
    },
    "doc": {
      "dependsOn": ["check"],
      "inputs": ["dependencies", "{projectRoot}/src/**/*"]
    },
    "test": {
      "dependsOn": ["check"]
    }
  }
}
